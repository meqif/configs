startup_message off
deflogin on

# Custom stuff
defutf8 on
defscrollback 10000
autodetach on

# Use the \ key instead of "C-a" for commands
escape \\\\

# Screen does not terminate if connection to terminal is lost.
autodetach on

# No dogs allowed.
vbell on
vbell_msg "   -- Ding   Ding   Ding --"

# Have a correct $SHELL
shell -$SHELL

# Pretty status line
hardstatus alwayslastline "%{WK} %{R}%H%{WK}    < %-w%{kW} %n %t %{-}%+w >    %= %Y-%m-%d %c "

# Always next screen, not last.
bind ^a next
